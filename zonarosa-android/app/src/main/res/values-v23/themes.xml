<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ZonaRosa.LightTheme" parent="ZonaRosa.BaseLightTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
    </style>

    <style name="ZonaRosa.DarkTheme" parent="ZonaRosa.BaseDarkTheme">
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ZonaRosa.LightRegistrationTheme" parent="ZonaRosa.LightNoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
    </style>

    <style name="ZonaRosa.DarkRegistrationTheme" parent="ZonaRosa.DarkNoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
    </style>

    <style name="ZonaRosa.LightNoActionBar" parent="ZonaRosa.BaseLightNoActionBar">
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ZonaRosa.DarkNoActionBar" parent="ZonaRosa.BaseDarkNoActionBar">
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
    </style>

    <style name="Theme.ZonaRosa.BottomSheetDialog.Fixed">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>
