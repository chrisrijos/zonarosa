<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ZonaRosa.LightTheme" parent="ZonaRosa.BaseLightTheme">
        <item name="android:statusBarColor">@color/core_grey_60</item>
    </style>

    <style name="ZonaRosa.DarkTheme" parent="@style/ZonaRosa.BaseDarkTheme">
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
    </style>

    <style name="ZonaRosa.DarkNoActionBar" parent="@style/ZonaRosa.BaseDarkNoActionBar">
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:colorControlActivated">@color/core_ultramarine_light</item>
    </style>

    <style name="ZonaRosa.DarkNoActionBar.StoryViewer">
        <item name="android:windowBackground">@color/zonarosa_colorSurface</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_transform</item>
    </style>

    <style name="ZonaRosa.LightNoActionBar" parent="ZonaRosa.BaseLightNoActionBar">
        <item name="android:statusBarColor">@color/core_grey_60</item>
    </style>

    <style name="ZonaRosa.FullScreenMedia" parent="ZonaRosa.DarkNoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ZonaRosa.LightRegistrationTheme" parent="ZonaRosa.LightNoActionBar">
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
    </style>

    <style name="ZonaRosa.DarkRegistrationTheme" parent="ZonaRosa.DarkNoActionBar">
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:navigationBarColor">@color/zonarosa_colorBackground</item>
    </style>

    <style name="ZonaRosa.MediaPreview" parent="@style/ZonaRosa.BaseMediaPreview">
        <item name="android:navigationBarColor">@color/media_preview_bar_background</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.ZonaRosa.Light.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:navigationBarColor">@color/zonarosa_colorSurface1</item>
    </style>

    <style name="Theme.ZonaRosa.BottomSheetDialog" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:navigationBarColor">@color/zonarosa_colorSurface1</item>
    </style>

    <style name="Theme.ZonaRosa.BottomSheetDialog.Fixed">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/zonarosa_colorBackground</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="ZonaRosa.LightNoActionBar.ConversationSettings" parent="ZonaRosa.LightNoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent_black_20</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/transparent_window_wipe_transition</item>
        <item name="android:windowAnimationStyle">@style/ZonaRosa.ConversationSettings.WindowAnimation</item>
    </style>

    <style name="ZonaRosa.DarkNoActionBar.ConversationSettings" parent="ZonaRosa.DarkNoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent_black_20</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/transparent_window_wipe_transition</item>
        <item name="android:windowAnimationStyle">@style/ZonaRosa.ConversationSettings.WindowAnimation</item>
    </style>

    <style name="ZonaRosa.ConversationSettings.WindowAnimation" parent="android:style/Animation" >
    </style>
</resources>
